<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.model2.mvc.service.product.ImagesDao" >

	<resultMap id="imageSelectMap" type="com.model2.mvc.service.domain.Images">
		<result property="id" column="id" jdbcType="INTEGER"></result>
		<result property="prodNo" column="prod_no" jdbcType="INTEGER"></result>
		<result property="img1" column="img1" jdbcType="VARCHAR"></result>
		<result property="img2" column="img2" jdbcType="VARCHAR"></result>
		<result property="img3" column="img3" jdbcType="VARCHAR"></result>
	</resultMap>
	
	<insert id="insertImages" parameterType="images">
		INSERT INTO
		images (id, prod_no, img1, img2, img3)
		VALUES (seq_images_id_no.nextval, #{prodNo}, #{img1:VARCHAR}, #{img2:VARCHAR}, #{img3:VARCHAR})
	</insert> 
	
	<select id="getImages" parameterType="integer" resultMap="imageSelectMap">
		SELECT
		*
		FROM images
		WHERE prod_no = #{value}
	</select>
	
	<update id="updateImages" parameterType="images">
		UPDATE images
		<set>
			<if test="img1 != null and img1 != ''">img1=#{img1}</if>
			<if test="img2 != null and img2 != ''">img2=#{img2}</if>
			<if test="img3 != null and img3 != ''">img3=#{img3}</if> 
		</set>
		WHERE prod_no = #{prodNo}
	</update>
</mapper>